<!DOCTYPE html>
<html lang="en">

<head>
    <!--Head-->
    {{> views/components/common/head }}
</head>
<body>
    <!--Navigation-->
    {{> views/components/common/nav }}

    <!--Contact Form-->
    <div class="container-fluid contact-form">
        <div class="stand-image">
            <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="stand_image" />
        </div>
        <form method="post">
            <h3>Leave us a Mesage</h3>
            <div class="row">
                <div class="col-xs-12  col-md-6">
                    <div class="form-group">
                        <input type="text" name="txtName" class="form-control" placeholder="Your Name *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="txtEmail" class="form-control" placeholder="Your Email *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="txtPhone" class="form-control" placeholder="Your Phone Number *" value="" />
                    </div>
                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <textarea name="txtMsg" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact" value="Send Message" />
                </div>
            </div>
        </form>
    </div>

    <!--Footer-->
    {{> views/components/common/footer }}

    <!--Scripts-->
    {{> views/components/common/scripts }}
</body>

</html>