<!DOCTYPE html>
<html lang="en">

<head>
    <!--Head-->
    {{> views/components/common/head }}
</head>
<body>
    <!--Navigation-->
    {{> views/components/common/nav }}

   <!--Title-->
   {{> views&components/common/title }}

    <!--Car Seach-->
    <div class="container-fluid">
        <div class="row" id="search-bar">
            <div class="col-xs-12 col-md-12 car-search-bar">
                <form action="#" method="#" name="search-car-form">
                    <div class="col-xs-12 col-md-4 search-txt-style">
                        Search
                    </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="form-group col-xs-12 col-md-3">
                        <select name="select-brand select-btn-style" class="form-control">
                            <option value='0'>Marca</option>
                            <option value='1'>Alfa Romeo</option>
                            <option value='2'>BMW</option>
                            <option value='3'>Mercedes</option>
                        </select>
                    </div>
                    <div class="form-group col-xs-12 col-md-3">
                        <div id="auto-model">
                            <select class="form-control select-btn-style">
                                <option value=''>Modelo</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-md-3">
                        <select class="form-control select-btn-style" name="P_cod_combustivel" data-style="btn-default">
                            <option value=''>Combustível</option>
                            <option value='31'>Gasolina</option>
                            <option value='37'>Gasóleo</option>
                        </select>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <button type="submit" class="btn-search btn btn-md btn-primary">
                            Search
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--Show cars from query above-->
    <div class="container-fluid">
        <div class="row">
            {{> views/components/stock/cars}}
        </div>
    </div>

    <!--Footer-->
    {{> views/components/common/footer}}

    <!--Scripts-->
    {{> views/components/common/scripts }}
</body>

</html>